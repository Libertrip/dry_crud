!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %title= strip_tags(@title)
    = stylesheet_link_tag 'crud'
    = csrf_meta_tag
    = yield :head
    
  %body
    #container
      %ul#menu= render 'layouts/menu'
      
      %h1= @title
      
      - if flash.notice.present?
        #flash_notice= raw(flash.notice)
      - elsif flash.alert.present?
        #flash_alert= raw(flash.alert)
      
      .actions= yield :actions
      
      #content= yield
      
  = javascript_include_tag 'application'
  = javascript_tag yield(:javascripts) if content_for?(:javascripts)
