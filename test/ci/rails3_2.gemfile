source 'https://rubygems.org'

gem 'rails', '~> 3.2'

gem 'json'

gem 'rake'
gem 'sdoc'
gem 'rspec-rails'

gem 'haml'

gem 'jquery-rails'
gem 'sass-rails'
gem 'coffee-rails'

gem 'kaminari'

# platform specific gems

gem 'rcov', :platforms => :ruby_18
gem 'simplecov', :platforms => :ruby_19

gem 'sqlite3', :platforms => :ruby
gem 'therubyracer', :platforms => :ruby

platforms :jruby do
  gem 'jdbc-sqlite3'
  gem 'activerecord-jdbcsqlite3-adapter'
  gem 'jruby-openssl'
end